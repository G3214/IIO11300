<Window x:Class="WinLotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinLotto"
        mc:Ignorable="d"
        Title="Lottonaattori Professional 2000 Second Edition" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">

            </StackPanel>
            <Label x:Name="lbChooseGame" Content="Choose the game"/>
            <ComboBox x:Name="comboBox" Width="120"/>
            
            <Label x:Name="lbNoOfDraws" Content="Number of draws:"/>
            
            <Button x:Name="btDraw" Content="Draw" Click="btDraw_Click"/>
            <Button x:Name="btCrear" Content="Clear"/>
            
            <Label x:Name="lbDrawnNumbers" Content="Randomly drawn numbers:"/>
           
            <ListBox x:Name="lstDraw" Height="50" />

            <Button x:Name="btClose" Content="Close"/>

        </StackPanel>


    </Grid>
</Window>
